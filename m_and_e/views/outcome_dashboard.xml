<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_program_project_kanban" model="ir.ui.view">
        <field name="name">program.project.kanban</field>
        <field name="model">program.project</field>
        <field name="arch" type="xml">
           <kanban>
                <field name="name"/>
                <field name="outcome_success_percent"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_details">
                                <p>
                                    <t t-esc="record.name.value"/>
                                </p>
                                <br/>
                                <div class="progress">
                                    <div class="progress-bar"
                                         role="progressbar"
                                         t-att-style="'width:' + (record.outcome_success_percent.value or '0') + '%;'"
                                         t-att-title="(record.outcome_success_percent.value or '0') + '%'">
                                    </div>
                                    <span class="progress-percent">
                                        <t t-esc="record.outcome_success_percent.value or '0'"/>%
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_program_project_graph" model="ir.ui.view">
        <field name="name">program.project.graph</field>
        <field name="model">program.project</field>
        <field name="arch" type="xml">
            <graph type="bar">
                <field name="name"/>
                <field name="outcome_success_percent" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_program_project_dashboard" model="ir.actions.act_window">
        <field name="name">Project Dashboard</field>
        <field name="res_model">program.project</field>
        <field name="view_mode">kanban,graph</field>
    </record>
</odoo>
